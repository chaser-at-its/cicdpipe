{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Development",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "server"
      ]
    },
    {
      "name": "Production",
      "type": "Ruby",
      "request": "launch",
      "env": {
        "RAILS_ENV": "production",
        "SECRET_KEY_BASE": "for_exec"
      },
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "server"
      ]
    }
  ]
}
